<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:clickable="false">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="My Nanodegree Apps!"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textSize="20dp"
        android:textColor="#ff0c009a" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SPOTIFY STREAMER"
        android:id="@+id/btn_spotifystreamer"
        android:layout_below="@+id/textView"
        android:layout_marginTop="49dp"
        android:layout_alignLeft="@+id/btn_scoresapp"
        android:layout_alignStart="@+id/btn_scoresapp"
        android:layout_alignRight="@+id/btn_scoresapp"
        android:layout_alignEnd="@+id/btn_scoresapp"
        android:background="#F08C35"
        android:layout_marginBottom="10dp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SCORES APP"
        android:id="@+id/btn_scoresapp"
        android:layout_below="@+id/btn_spotifystreamer"
        android:layout_alignLeft="@+id/btn_libraryapp"
        android:layout_alignStart="@+id/btn_libraryapp"
        android:layout_alignRight="@+id/btn_libraryapp"
        android:layout_alignEnd="@+id/btn_libraryapp"
        android:background="#F08C35"
        android:layout_marginBottom="10dp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="LIBRARY APP"
        android:id="@+id/btn_libraryapp"
        android:layout_below="@+id/btn_scoresapp"
        android:layout_alignLeft="@+id/btn_builditbigger"
        android:layout_alignStart="@+id/btn_builditbigger"
        android:layout_alignRight="@+id/btn_builditbigger"
        android:layout_alignEnd="@+id/btn_builditbigger"
        android:background="#F08C35"
        android:layout_marginBottom="10dp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="BUILD IT BIGGER"
        android:id="@+id/btn_builditbigger"
        android:layout_below="@+id/btn_libraryapp"
        android:layout_alignLeft="@+id/btn_baconreader"
        android:layout_alignStart="@+id/btn_baconreader"
        android:layout_alignRight="@+id/btn_baconreader"
        android:layout_alignEnd="@+id/btn_baconreader"
        android:background="#F08C35"
        android:layout_marginBottom="10dp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="BACON READER"
        android:id="@+id/btn_baconreader"
        android:layout_below="@+id/btn_builditbigger"
        android:layout_alignLeft="@+id/btn_capstone"
        android:layout_alignStart="@+id/btn_capstone"
        android:layout_alignRight="@+id/btn_capstone"
        android:layout_alignEnd="@+id/btn_capstone"
        android:background="#F08C35"
        android:layout_marginBottom="10dp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CAPSTONE: MY OWN APP"
        android:id="@+id/btn_capstone"
        android:layout_below="@+id/btn_baconreader"
        android:layout_centerHorizontal="true"
        android:textColor="#ffffffff"
        android:background="#ffff0405"
        android:paddingLeft="10dp"
        android:paddingRight="10dp" />
</RelativeLayout>
